{
  "name": "@projectzerodays/ultimate-installer",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "tasks": {
    "start": "deno run --allow-all src/main.ts",
    "dev": "deno run --allow-all --watch src/main.ts",
    "test": "deno test --allow-all",
    "test:unit": "deno test --allow-all tests/unit",
    "test:integration": "deno test --allow-all tests/integration",
    "test:coverage": "deno test --allow-all --coverage=coverage && deno coverage coverage --lcov --output=coverage/lcov.info",
    "lint": "deno fmt && deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/main.ts",
    "cache": "deno cache --reload src/main.ts",
    "outdated": "deno outdated",
    "compile": "deno task compile:current",
    "compile:current": "deno compile --allow-all --output dist/ultimate-installer src/main.ts",
    "compile:all": "deno task compile:linux && deno task compile:macos && deno task compile:windows && deno task compile:mobile",
    "compile:linux": "deno task compile:linux-x64 && deno task compile:linux-arm64",
    "compile:linux-x64": "deno compile --allow-all --target x86_64-unknown-linux-gnu --output dist/ultimate-installer-linux-x64 src/main.ts",
    "compile:linux-arm64": "deno compile --allow-all --target aarch64-unknown-linux-gnu --output dist/ultimate-installer-linux-arm64 src/main.ts",
    "compile:macos": "deno task compile:macos-x64 && deno task compile:macos-arm64",
    "compile:macos-x64": "deno compile --allow-all --target x86_64-apple-darwin --output dist/ultimate-installer-macos-x64 src/main.ts",
    "compile:macos-arm64": "deno compile --allow-all --target aarch64-apple-darwin --output dist/ultimate-installer-macos-arm64 src/main.ts",
    "compile:windows": "deno compile --allow-all --target x86_64-pc-windows-msvc --output dist/ultimate-installer-windows-x64.exe src/main.ts",
    "compile:mobile": "deno compile --allow-all --target aarch64-linux-android --output dist/ultimate-installer-android src/main.ts",
    "compile:freebsd": "deno compile --allow-all --target x86_64-unknown-freebsd --output dist/ultimate-installer-freebsd src/main.ts",
    "install": "deno install --allow-all --global --name ultimate-installer src/main.ts",
    "uninstall": "deno uninstall --global ultimate-installer",
    "release": "deno task lint && deno task test && deno task compile:all",
    "docker:build": "docker build -t ultimate-installer:latest .",
    "docker:run": "docker run -it --rm ultimate-installer:latest",
    "generate:schema": "deno run --allow-all scripts/generate-json-schema.ts",
    "generate:docs": "deno run --allow-all scripts/generate-docs.ts",
    "bump": "deno run --allow-all scripts/bump-version.ts"
  },
  "imports": {
    "@std/yaml": "jsr:@std/yaml@^0.224.0",
    "@std/path": "jsr:@std/path@^0.225.0",
    "@std/fs": "jsr:@std/fs@^0.229.0",
    "@std/io": "jsr:@std/io@^0.224.0",
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "@std/testing": "jsr:@std/testing@^0.224.0",
    "@std/log": "jsr:@std/log@^0.224.0",
    "@std/semver": "jsr:@std/semver@^0.224.0",
    "@std/crypto": "jsr:@std/crypto@^0.224.0",
    "@std/encoding": "jsr:@std/encoding@^0.224.0",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.4",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.4",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.4",
    "@cliffy/flags": "jsr:@cliffy/flags@^1.0.0-rc.4",
    "@cliffy/keycode": "jsr:@cliffy/keycode@^1.0.0-rc.4",
    "zod": "npm:zod@^3.22.4"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "include": ["src/", "tests/", "scripts/"],
    "exclude": ["dist/", "coverage/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/", "scripts/", "*.md"],
    "exclude": ["dist/", "coverage/"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "test": {
    "include": ["tests/"],
    "exclude": ["tests/fixtures/"]
  }
}
