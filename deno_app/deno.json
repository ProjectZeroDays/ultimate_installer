{
  "name": "@projectzerodays/ultimate-installer",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "tasks": {
    "start": "deno run --allow-all src/main.ts",
    "dev": "deno run --allow-all --watch src/main.ts",
    "test": "deno test --allow-all",
    "lint": "deno fmt && deno lint",
    
    "compile": "deno task compile:all",
    "compile:all": "deno task compile:linux && deno task compile:macos && deno task compile:windows && deno task compile:android && deno task compile:ios",
    
    "compile:linux": "deno compile --allow-all --target x86_64-unknown-linux-gnu --output dist/ultimate-installer-linux-x64 src/main.ts",
    "compile:linux-arm": "deno compile --allow-all --target aarch64-unknown-linux-gnu --output dist/ultimate-installer-linux-arm64 src/main.ts",
    
    "compile:macos": "deno compile --allow-all --target x86_64-apple-darwin --output dist/ultimate-installer-macos-x64 src/main.ts",
    "compile:macos-arm": "deno compile --allow-all --target aarch64-apple-darwin --output dist/ultimate-installer-macos-arm64 src/main.ts",
    
    "compile:windows": "deno compile --allow-all --target x86_64-pc-windows-msvc --output dist/ultimate-installer-windows-x64.exe src/main.ts",
    
    "compile:android": "deno compile --allow-all --target aarch64-linux-android --output dist/ultimate-installer-android src/main.ts",
    "compile:ios": "echo 'iOS compilation requires Xcode and specific signing. Use deno task compile:ish instead'",
    "compile:ish": "deno compile --allow-all --target x86_64-unknown-linux-gnu --output dist/ultimate-installer-ish src/main.ts",
    
    "install": "deno install --allow-all --global --name ultimate-installer src/main.ts",
    "release": "deno task lint && deno task test && deno task compile"
  },
  "imports": {
    "@std/yaml": "jsr:@std/yaml@^0.224.0",
    "@std/path": "jsr:@std/path@^0.225.0",
    "@std/fs": "jsr:@std/fs@^0.229.0",
    "@std/io": "jsr:@std/io@^0.224.0",
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.4",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.4",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.4",
    "chalk": "npm:chalk@^5.3.0"
  }
}
